<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:padding="10dp"
        android:background="@drawable/common_white_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/name_word_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.ydys.qmb.ui.custom.DividerView
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layerType="software"
            custom:dashGap="3dp"
            custom:dashLength="1dp"
            custom:dashThickness="1dp"
            custom:divider_line_color="@color/line2_color"
            custom:divider_orientation="vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合评分"
                android:textColor="@color/zonghe_color" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/high_score_color"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_remove"
                android:layout_width="84dp"
                android:layout_height="30dp"
                android:background="@drawable/look_bg"
                android:text="移除"
                android:textColor="@color/zonghe_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>