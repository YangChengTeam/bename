<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_home_top"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:src="@mipmap/home_quming_top_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="395dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="145dp"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@mipmap/name_input_bg"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/surname_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="姓氏："
                    android:textColor="@color/common_txt_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_xs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入你的姓氏"
                    android:lines="1"
                    android:maxLength="2"
                    android:paddingLeft="12dp"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line1_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sd_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="单双："
                    android:textColor="@color/common_txt_color"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rg_name_model"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_single"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@color/transparent"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/sex_selector"
                        android:drawablePadding="4dp"
                        android:gravity="left|center"
                        android:text="单名"
                        android:textColor="@color/tab_tv_normal"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_double"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@color/transparent"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/sex_selector"
                        android:drawablePadding="4dp"
                        android:gravity="left|center"
                        android:text="双名"
                        android:textColor="@color/tab_tv_normal"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line1_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sex_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="性别："
                    android:textColor="@color/common_txt_color"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rg_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_boy"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@color/transparent"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/sex_selector"
                        android:drawablePadding="4dp"
                        android:gravity="left|center"
                        android:text="男"
                        android:textColor="@color/tab_tv_normal"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_girl"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@color/transparent"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/sex_selector"
                        android:drawablePadding="4dp"
                        android:gravity="left|center"
                        android:text="女"
                        android:textColor="@color/tab_tv_normal"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line1_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_birth_in"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:background="@drawable/common_selected_bg"
                    android:text="已出生"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_birth_not"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/common_normal_bg"
                    android:text="未出生"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line1_color" />

            <RelativeLayout
                android:id="@+id/layout_birth_day"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_bir_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/bir_date" />

                <TextView
                    android:id="@+id/tv_bir_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_bir_date"
                    android:text="出生日期："
                    android:textColor="@color/common_txt_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_bir_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_bir_date_txt"
                    android:text="2019-01-16 12:32"
                    android:textColor="@color/tab_tv_normal"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_date_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line1_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_start_give_name"
                    android:layout_width="226dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/start_name_btn"
                    android:text="立即取名"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>
